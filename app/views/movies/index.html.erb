<h2>All Movies</h2>

<%#  Part 2: Start here... %>


<%= form_tag movies_path, method: :get, id: 'ratings_form' do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>

      <%# ID Automagically generated for the below checkbox: "rating" + "_" + "{rating}" %>
      <%# For every form input, an ID attribute is generated from its name %>
      <%= check_box_tag "ratings[#{rating}]", "1",  @ratings_to_show_hash.include?(rating), class: 'form-check-input' %>
      
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
        <% if (@sort_by == "title") %>
          <%= link_to "Movie Title", movies_path(:sort_by => "title"), id: 'title_header', class: 'hilite text-success' %>
        <% else %>
          <%= link_to "Movie Title", movies_path(:sort_by => "title"), id: 'title_header' %>
        <% end %>
      </th>
      
      <th>Rating</th>

      <th>
        <%= link_to "Release Date", movies_path(:sort_by => "release_date"), id: 'release_date_header'  %>
      </th>

      <th>More Info</th>

    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
